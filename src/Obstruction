/**
 * A general, rectangular object that balls will reflect off of and possibly damage.
 *
 * @author Hunter Gregory
 */
public abstract class Obstruction extends Rectangle {
    static final int INDESTRUCTIBLE = -6; //FIX or -1

    private int myHeight;
    private int myWidth;
    private Color myColor;
    private remainingHits;
    private reflectionMultiplier;

    /**
     * Updates the instance variables when a Ball object intersects it.
     */
    public void collision;
}